{
  "version": 2,
  "robot": {
    "modules": {
      "spider": {
          "driver": "spider",
          "in": ["can", "move"],
          "out": ["can"],
          "init": {}
      },
      "can": {
          "driver": "can",
          "in": ["raw", "can"],
          "out": ["can", "raw"],
          "init": {}
      },
      "serial": {
          "driver": "serial",
          "in": ["raw"],
          "out": ["raw"],
          "init": {"port": "/dev/ttyS0", "speed": 115200,
                   "rtscts":true, "reset":true}
      },
      "follow": {
        "driver": "follow_trees:FollowTrees",
        "init": {}
      },

      "imu": {
          "driver": "imu",
          "in": ["raw"],
          "out": ["orientation", "rotation", "data"],
          "init": {}
      },
      "localization": {
	      "driver": "subt.odoimuloc:Localization",
	      "in": ["orientation", "odom"],
	      "out": ["pose3d"],
	      "init":{}
      },
      "imu_serial": {
        "driver": "serial",
        "in": [],
        "out": [
          "raw"
        ],
        "init": {
          "port": "/dev/ttyUSB0",
          "speed": 115200
        }
      },
      "lidar": {
          "driver": "lidar",
          "in": ["raw"],
          "out": ["raw", "scan"],
          "init": {"sleep": 0.06, "blind_zone": 100}
      },
      "lidar_tcp": {
          "driver": "tcp",
          "in": ["raw"],
          "out": ["raw"],
          "init": {"host": "192.168.1.71", "port": 2111, "timeout": 0.5}
      }
    },
    "links": [
              ["follow.desired_speed", "spider.move"],

              ["imu_serial.raw", "imu.raw"],
              ["spider.pose2d", "localization.odom"],
              ["imu.orientation", "localization.orientation"],

              ["spider.status", "app.status"],
              ["spider.pose2d", "app.pose2d"],
              ["spider.can", "can.can"],
              ["can.can", "spider.can"],
              ["serial.raw", "can.raw"],
              ["can.raw", "serial.raw"],

              ["lidar_tcp.raw", "lidar.raw"],
              ["lidar.raw", "lidar_tcp.raw"]

    ]
  }
}
