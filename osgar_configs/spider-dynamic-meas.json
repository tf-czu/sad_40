{
  "version": 2,
  "robot": {
    "modules": {
      "spider": {
          "driver": "spider",
          "in": ["can"],
          "out": ["can"],
          "init": {}
      },
      "can": {
          "driver": "can",
          "in": ["raw", "can"],
          "out": ["can", "raw"],
          "init": {"canopen": true}
      },
      "serial": {
          "driver": "serial",
          "in": ["raw"],
          "out": ["raw"],
          "init": {"port": "/dev/ttyS0", "speed": 115200,
                   "rtscts":true, "reset":true}
      },
      "imu": {
          "driver": "imu",
          "in": ["raw"],
          "out": ["orientation", "rotation"],
          "init": {}
      },
      "imu_serial": {
          "driver": "serial",
          "in": [],
          "out": ["raw"],
          "init": {"port": "/dev/ttyUSB0", "speed": 115200}
      },
      "to_icp": {
        "driver": "subt.push:Push",
        "init": {
          "bind": true,
          "endpoint": "tcp://*:5555"
        }
      }
    },
    "links": [["spider.can", "can.can"],
              ["can.can", "spider.can"],
              ["serial.raw", "can.raw"],
              ["can.raw", "serial.raw"],
              ["imu_serial.raw", "imu.raw"],

              ["spider.pose2d", "to_icp.pose2d"],
              ["imu.rotation", "to_icp.rotation"]
    ]
  }
}
